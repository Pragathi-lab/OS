#include <stdio.h>

#define MAX_PROCESSES 100

typedef struct {
    int id, arrival_time, burst_time, priority, waiting_time, turnaround_time, remaining_time;
} Process;

void calculateTurnaroundWaiting(Process processes[], int n) {
    for (int i = 0; i < n; i++) {
        processes[i].turnaround_time = processes[i].waiting_time + processes[i].burst_time;
    }
}

void priorityScheduling(Process processes[], int n) {
    Process temp;
    int total_waiting_time = 0, total_turnaround_time = 0;

    // Sorting by priority (lower value = higher priority)
    for (int i = 0; i < n - 1; i++) {
        for (int j = i + 1; j < n; j++) {
            if (processes[i].priority > processes[j].priority) {
                temp = processes[i];
                processes[i] = processes[j];
                processes[j] = temp;
            }
        }
    }

    processes[0].waiting_time = 0;
    for (int i = 1; i < n; i++) {
        processes[i].waiting_time = processes[i - 1].waiting_time + processes[i - 1].burst_time;
        total_waiting_time += processes[i].waiting_time;
    }

    calculateTurnaroundWaiting(processes, n);

    printf("\nPriority Scheduling:\n");
    printf("ID\tPriority\tBurst Time\tWaiting Time\tTurnaround Time\n");
    for (int i = 0; i < n; i++) {
        total_turnaround_time += processes[i].turnaround_time;
        printf("%d\t%d\t\t%d\t\t%d\t\t%d\n", processes[i].id, processes[i].priority,
               processes[i].burst_time, processes[i].waiting_time, processes[i].turnaround_time);
    }

    printf("\nAverage Waiting Time: %.2f\n", (float)total_waiting_time / n);
    printf("Average Turnaround Time: %.2f\n", (float)total_turnaround_time / n);
}

void roundRobin(Process processes[], int n, int quantum) {
    int time = 0, remaining = n, total_waiting_time = 0, total_turnaround_time = 0;
    int completed[MAX_PROCESSES] = {0};

    // Initialize remaining time
    for (int i = 0; i < n; i++) {
        processes[i].remaining_time = processes[i].burst_time;
    }

    printf("\nRound Robin (Quantum = %d):\n", quantum);
    printf("ID\tWaiting Time\tTurnaround Time\n");

    while (remaining > 0) {
        for (int i = 0; i < n; i++) {
            if (processes[i].remaining_time > 0) {
                if (processes[i].remaining_time > quantum) {
                    time += quantum;
                    processes[i].remaining_time -= quantum;
                } else {
                    time += processes[i].remaining_time;
                    processes[i].waiting_time = time - processes[i].burst_time;
                    processes[i].turnaround_time = time;
                    total_waiting_time += processes[i].waiting_time;
                    total_turnaround_time += processes[i].turnaround_time;
                    processes[i].remaining_time = 0;
                    remaining--;
                    printf("%d\t%d\t\t%d\n", processes[i].id, processes[i].waiting_time, processes[i].turnaround_time);
                }
            }
        }
    }

    printf("\nAverage Waiting Time: %.2f\n", (float)total_waiting_time / n);
    printf("Average Turnaround Time: %.2f\n", (float)total_turnaround_time / n);
}

int main() {
    int n, quantum;
    Process processes[MAX_PROCESSES];

    printf("Enter the number of processes: ");
    scanf("%d", &n);

    for (int i = 0; i < n; i++) {
        printf("Enter Process ID, Arrival Time, Burst Time, and Priority for process %d: ", i + 1);
        scanf("%d %d %d %d", &processes[i].id, &processes[i].arrival_time, &processes[i].burst_time, &processes[i].priority);
    }

    priorityScheduling(processes, n);

    printf("\nEnter time quantum for Round Robin: ");
    scanf("%d", &quantum);

    roundRobin(processes, n, quantum);

    return 0;
}
